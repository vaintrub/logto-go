{
  "extends": ["@commitlint/config-conventional"],
  "defaultIgnores": true,
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "tests",
        "chore",
        "ci",
        "perf",
        "revert"
      ]
    ],
    "subject-case": [2, "never", ["upper-case", "pascal-case"]],
    "header-max-length": [2, "always", 100]
  }
}
